FROM python:3.11-slim
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        pkg-config \
        libmariadb-dev \
        && \
    rm -rf /var/lib/apt/lists/*
RUN pip install fastapi uvicorn mariadb
COPY mcp_server.py /app/
WORKDIR /app
CMD ["uvicorn", "mcp_server:app", "--host", "0.0.0.0", "--port", "8000"]
